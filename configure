#!/bin/bash


function usage()
{
	echo "help: configure INSTALLPATH VMIMGPATH"
}

INSTALLPATH=/home/vmaffione/irati/local
VMIMGPATH=/home/vmaffione/git/vm/irati.qcow2

usage

if [ -n "$1" ]; then
	INSTALLPATH=$1
fi

if [ -n "$2" ]; then
	VMIMGPATH=$2
fi

sed -e "s|INSTALLPATH|$INSTALLPATH|g" -e "s|VMIMGPATH|$VMIMGPATH|g" in.gen.py > gen.py

chmod +x gen.py

echo "Configured."
